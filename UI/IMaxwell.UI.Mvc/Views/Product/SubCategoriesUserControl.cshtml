@model IMaxwell.UI.Mvc.Models.ProductCatalog
@if (Model.SubCategories != null && Model.SubCategories.Any())
{
    using (Ajax.BeginForm("SelectSubCategory", "Product", new AjaxOptions { UpdateTargetId = "Products" }))
    {
        @Html.HiddenFor(m => m.SelectedCategoryId)
        @Html.DropDownListFor(
            m => m.SelectedSubCategoryId,
            new SelectList(Model.SubCategories, "Id", "Name"),
            string.Empty
            )
    }
}
<script type="text/javascript">
    $('#SelectedSubCategoryId').change(function () {
        $(this).parents('form').submit();
    });
</script>
